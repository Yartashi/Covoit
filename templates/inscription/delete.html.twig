{% extends 'base.html.twig' %}

{% block body %}

    <div class="alert alert-danger">
        <strong>{{ 'avertissement'|trans }}</strong> {{ 'msg-suppr-inscription'|trans }}
        <ul>
            <li><strong>{{ 'username'|trans }}: </strong> {{ inscription.utilisateur.username }}</li>
            <li><strong>{{ 'date'|trans }}: </strong>{{ inscription.dateInscr|date('d/m/Y') }}</li>
            <li><strong>{{ 'nombre-passagers'|trans }}: </strong>{{ inscription.nbPassage }}</li>

        </ul>
    </div>
    <div class="collapse navbar-collapse">
    {{ form_start(form, {'attr': {'class': 'navbar-form navbar-left'}}) }}
    {{ form_widget(form) }}
        <a href="/trajet/{{inscription.trajet.id}}/show" class="btn btn-success" role="button">
            <span class="glyphicon glyphicon-off" aria-hidden="true"></span>{{ 'cancel'|trans }}</a>
        <button type="submit" class="btn btn-danger" onclick="return confirm('{{ "confirm"|trans }}')">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            {{ 'suppr'|trans }}
    </button>
    {{ form_end(form) }}
    </div>
{% endblock %}
