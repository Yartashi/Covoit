{% extends 'base.html.twig' %}

{% block body %}

    <div class="alert alert-danger">
        <strong>Avertissement !</strong> Vous êtes en train de supprimer le trajet suivant :
        <ul>
            <li><strong>Description : </strong> {{ trajet.description }}</li>
            <li><strong>Ville de départ : </strong>{{ trajet.villeDep }}</li>
            <li><strong>Ville de destination : </strong>{{ trajet.villeDest }}</li>
            <li><strong>Date de départ : </strong>{{ trajet.dateDep|date('m/d/Y')  }}</li>
            <li><strong>Nombre de places : </strong>{{ trajet.nombrePlacesMax }}</li>
            <li><strong>Statut : </strong>{{ trajet.statut }}</li>
        </ul>
    </div>
    <div class="collapse navbar-collapse">
    {{ form_start(form, {'attr': {'class': 'navbar-form navbar-left'}}) }}
    {{ form_widget(form) }}
        <a href="{{ path('trajet.list') }}" class="btn btn-success" role="button"><span class="glyphicon glyphicon-off" aria-hidden="true"></span>Annuler</a>
        <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes vous sûr ??')">
        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        Supprimer
    </button>
    {{ form_end(form) }}
    </div>
{% endblock %}