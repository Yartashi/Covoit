{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails d'un trajet 
    <div class="card" style="margin-top: 80px;">
        <div class="media-body">
            <div class="row">
                <div class="col-sm-10">
                    <h3 class="media-heading"><strong>Départ :{{ trajet.villeDep }} , Arrivé : {{trajet.villeDest}} </strong></h3>
                </div>

                <div class="col-sm-2">
                    <i class="pull-right">Publié le {{ trajet.dateDep|date('d/m/Y') }}</i>
                </div>
            </div>

            </br></br>
            <p>{{ trajet.description|nl2br }}</p>
            </br></br>
            <p>
                <strong>Nombre de places maximum  : </strong> {{ trajet.nombrePlacesMax }}
            </p>
            <p>
                <strong>Nombre de places restantes  : </strong> {{ trajet.calculerNbPlacesRestantes }}
            </p>
            </br></br>
            <div class="col-sm-10">
            <p>
                <strong>Les commentaires : <strong></br>
                <table class="table">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Date commentaire</th>
                    <th>messageComm</th>
                    <th>Action<th>
                </tr>
                </thead>
                <tbody>
                {% for commentaire in trajet.commentaires %}
                    <tr>
                        <td><a href="/utilisateur/{{commentaire.utilisateur.id}}/show">{{ commentaire.utilisateur.username }}</a></td>
                        <td>{{ commentaire.dateComm|date('d/m/Y') }}</td>
                        <td>{{ commentaire.messageComm }}</td>
                        <td>
                            {% if (app.user.username == commentaire.utilisateur.username) %}
                                <a class="btn btn-primary" href={{ path("commentaire.edit",{id : commentaire.id} )}} >Modifier</a>
                                <a class="btn btn-danger" href={{ path("commentaire.delete",{id : commentaire.id} )}} >Supprimer</a>
                            {% elseif is_granted('ROLE_ADMIN') %}
                                <a class="btn btn-danger" href={{ path("commentaire.delete",{id : commentaire.id} )}} >Supprimer</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>
                <a class="btn btn-primary" href={{ path("commentaire.create",{idtrajet : trajet.id})}} >
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Ajouter un commentaire
                </a>
                </br></br>
            </p>
            </div>
            
            <div class="col-sm-10">
            <p>
                <strong>Les passagers : <strong>
                <table class="table">
                <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Date d'inscription</th>
                    <th>Nombre de Passagers</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% for inscription in trajet.inscriptions %}
                    <tr>
                        <td><a href="/utilisateur/{{inscription.utilisateur.id}}/show">{{ inscription.utilisateur.username }}</a></td>
                     
                        <td>{{ inscription.dateInscr|date('d/m/Y') }}</td>
                        <td>{{ inscription.nbPassage }}</td>
                        <td>
                            {% if (app.user.username == inscription.utilisateur.username) %}
                                <a class="btn btn-primary" href={{ path("inscription.edit",{id : inscription.id} )}} >Modifier</a>
                                <a class="btn btn-danger" href={{ path("inscription.delete",{id : inscription.id} )}} >Supprimer</a>
                            {% elseif is_granted('ROLE_ADMIN') %}
                                <a class="btn btn-danger" href={{ path("inscription.delete",{id : inscription.id} )}} >Supprimer</a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
                </table>
                {% if (trajet.calculerNbPlacesRestantes > 0)  %}
                    <a class="btn btn-primary" href={{ path("inscription.create",{idtrajet : trajet.id})}} >
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            Réserver
                    </a>
                {% endif %}
            </p>
            </div>
            <div class="row">
                <div class="col-sm-12 text-right">
                    <a class="btn btn-default" href="/trajet">
                        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                        Liste des trajets
                    </a>

                    <a class="btn btn-primary" href={{ path("trajet.edit",{id : trajet.id})}} >
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Éditer
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}