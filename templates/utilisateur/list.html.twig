{% extends 'base.html.twig' %}

{% block body %}
    <table class="table text-center">
        <tr>
            <th class="active text-center">Id</th>
            <th class="active text-center">Login</th>
            <th class="active text-center">Nom</th>
            <th class="active text-center">Prénom</th>
            <th class="active text-center">Date de naissance</th>
            <th class="active text-center">E-mail</th>
            <th class="active text-center">Rôle</th>
            <th class="active text-center">Action</th>
        </tr>

        {% for utilisateur in utilisateurs %}
            <tr>
                <td>{{ utilisateur.id }}</td>
                <td>{{ utilisateur.username }}</td>
                <td>{{ utilisateur.nom }}</td>
                <td>{{ utilisateur.prenom }}</td>
                <td>{{ utilisateur.dateNaiss|date("d/m/Y") }}</td>
                <td>{{ utilisateur.mail }}</td>
                <td>{% for role in utilisateur.roles %}
                    {{ role }}
                    {% endfor %}
                </td>
                <td><a href={{ path("utilisateur.edit",{id : utilisateur.id} )}}  class="btn btn-primary" >Modifier</a>
                <a href={{ path("utilisateur.delete",{id : utilisateur.id} ) }} class="btn btn-danger">Supprimer</a>
                <a href={{ path("utilisateur.show",{id : utilisateur.id} ) }} class="btn btn-info">Montrer</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}