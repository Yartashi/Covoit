{% extends 'base.html.twig' %}

{% block body %}
    <h1>Détails de l'utilisateur {{ utilisateur.id }} :</h1>
    <div class="media" style="margin-top: 60px;">
        <div class="media-body">
            <div class="row">
                <div class="col-sm-10">
                    <h3 class="media-heading">{{ utilisateur.prenom }} {{ utilisateur.nom }}</h3>
                </div>

                <div class="col-sm-10">
                    <h4 class="media-heading">Informations personnelles</h4>
                    <p>
                        <table class="table">
                            <tbody>
                                <tr>
                                    <td>Nom</td>
                                    <td>Prénom</td>
                                    <td>E-mail</td>
                                    <td>Téléphone</td>
                                    <td>Adresse</td>
                                    <td>Date de naissance</td>
                                </tr>
                                <tr>
                                    <td>{{ utilisateur.nom }}</td>
                                    <td>{{ utilisateur.prenom }}</td>
                                    <td>{{ utilisateur.email }}</td>
                                    <td>{{ utilisateur.telephone }}</td>
                                    <td>{{ utilisateur.adresse }}</td>
                                    <td>{{ utilisateur.dateNaiss }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </p>
                    <p><a class="btn btn-primary" href="#">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            Éditer
                        </a>
                    </p>
                </div>
                <div class="col-sm-10">
                    <h4 class="media-heading" id="params">Paramètres</h4>
                    <p>
                    <table class="table">
                        <tbody>
                        <tr>
                            <td>Style</td>
                            <td>Langue</td>
                            <td>Rôle</td>
                        </tr>
                        <tr>
                            <td>{{ utilisateur.styleChoix }}</td>
                            <td>{{ utilisateur.langueChoix }}</td>
                            <td>{{ utilisateur.role }}</td>
                        </tr>
                        </tbody>
                    </table>
                    </p>
                    <p><a class="btn btn-primary" href="#">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                            Éditer
                        </a>
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12 text-right">
                    <a class="btn btn-default" href="#">
                        <span class="glyphicon glyphicon-menu-left" aria-hidden="true"></span>
                        Liste des trajets
                    </a>

                    <a class="btn btn-primary" href="#">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        Éditer
                    </a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}